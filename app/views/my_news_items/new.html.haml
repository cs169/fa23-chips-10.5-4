.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        %h1.text-center Edit news article

.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        - found_representative = @representatives_list.find { |name, id| id == @rep_id.to_i }
        - if found_representative
            %p.text-left Representative: #{found_representative.first}


.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        %p.text-left Issue: #{@issue}

.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        = render 'form', news_item: @news_item,
        form_url: representative_new_my_news_item_path(@representative),
        form_method: :post,
        representatives_list: @representatives_list,
        representative_id: @rep_id, 
        issue: @issue    

.row.mt-3
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        = link_to representative_news_items_path(@representative), class: 'btn btn-info' do
            View news articles
            %i.fas.fa-arrow-right
